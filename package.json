{
  "name": "serverless-dynamodb-dev-sample",
  "version": "0.0.0-development",
  "description": "Sample usage of serverless-dynamodb-dev with Docker.",
  "author": "RubeÃÅn Illodo Brea <me@rubenillodo.com>",
  "private": true,
  "scripts": {
    "precommit": "yarn lint && yarn test --silent",
    "dev": "serverless offline start --host 0.0.0.0",
    "lint": "tslint -p . -c tslint.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "test": "jest",
    "build": "serverless package",
    "clean": "rimraf .build .serverless coverage dist"
  },
  "dependencies": {
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^0.0.29",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^22.1.0",
    "@types/winston": "^2.3.7",
    "aws-sdk": "^2.186.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "serverless": "^1.22.0",
    "serverless-dynamodb-dev": "^1.0.0",
    "serverless-offline": "^3.16.0",
    "serverless-plugin-typescript": "^1.1.5",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-immutable": "^4.5.1",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".d.ts",
      "aws"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
